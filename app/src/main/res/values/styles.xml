<resources>

    <!-- Base Themes -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Customized Themes -->

    <style name="AppTheme.IndigoPink" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="colorAccent">@color/pink_a200</item>
        <item name="colorControlActivated">@color/pink_a200</item>
    </style>

    <style name="AppTheme.MidNightBlueYellow" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/might_night_blue_500</item>
        <item name="colorPrimaryDark">@color/might_night_blue_700</item>
        <item name="colorAccent">@color/yellow_500</item>
        <item name="colorControlActivated">@color/might_night_blue_700</item>
    </style>

    <style name="AppTheme.WetAsphaltTurquoise" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/wet_asphalt_500</item>
        <item name="colorPrimaryDark">@color/wet_asphalt_700</item>
        <item name="colorAccent">@color/turquoise_500</item>
        <item name="colorControlActivated">@color/turquoise_500</item>
    </style>

    <style name="AppTheme.GreyEmerald" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/grey_600</item>
        <item name="colorPrimaryDark">@color/grey_700</item>
        <item name="colorAccent">@color/emerald_500</item>
        <item name="colorControlActivated">@color/emerald_500</item>
    </style>

    <style name="AppTheme.TealOrange" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/deep_orange_500</item>
        <item name="colorControlActivated">@color/deep_orange_500</item>
    </style>

    <style name="AppTheme.BlueBrown" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryDark">@color/brown_700</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorControlActivated">@color/blue_500</item>
    </style>

    <!-- Expanded ImageView Theme -->

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <!-- Login Activity Theme -->

    <style name="AppTheme.LoginActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- SplashScreen Theme -->
    
    <style name="AppTheme.SplashScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
